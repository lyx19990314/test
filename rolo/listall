#
# 列出电话簿中所有人的信息
#

IFS='^'
echo "------------------------------------------------------"
while read line 
do
	#
	# 获取第一个和最后一个字段
	#
	set $line

	#
	# 显示第一个和最后一个字段
	#
	eval printf "\"%-40.40s %-s\\n\"" "\"$1\"" "\"\${$#}\""	
done < $PHONEBOOK
echo "------------------------------------------------------"
